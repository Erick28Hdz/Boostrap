<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-nav shadow-sm fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="/img/universales/logo.jpg" class="logo" alt="Logo"> Supermarket Family
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <img src="/img/universales/lista.png" alt="Menú" width="28">
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav align-items-center gap-2">
          <li class="nav-item">
            <a class="nav-link active" href="/">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/nosotros">Nosotros</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/productos">Productos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contacto">Contacto</a>
          </li>

          <% if (usuario && usuario.rol==='admin' ) { %>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <% } %>

              <% if (usuario && usuario.rol==='usuario' ) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/promociones">Promociones</a>
                </li>
                <% } %>

                  <% if (!usuario) { %>
                    <!-- Usuario NO autenticado -->
                    <li class="nav-item">
                      <a class="btn btn-ingresar" href="/login">Ingresar</a>
                    </li>
                    <% } else { %>
                      <!-- Usuario autenticado -->
                      <li class="nav-item">
                        <span class="nav-link">Hola, <%= usuario.nombre %></span>
                      </li>
                      <li class="nav-item">
                        <a class="btn btn-danger" href="/logout">Cerrar sesión</a>
                      </li>
                      <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>