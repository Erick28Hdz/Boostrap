<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Gesti√≥n de Productos - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      display: flex;
    }

    .sidebar {
      width: 250px;
      background-color: #343a40;
      color: white;
      flex-shrink: 0;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 12px 20px;
      display: block;
    }

    .sidebar a:hover {
      background-color: #495057;
    }

    .main-content {
      flex-grow: 1;
      padding: 30px;
      background-color: #f8f9fa;
    }
  </style>
</head>

<body>

  <%- include('../partials/sidebar') %>

    <div class="main-content container-fluid">
      <h1 class="mb-4">üì¶ Gesti√≥n de Productos</h1>

      <!-- Bot√≥n Crear e Importar -->
      <div class="mb-3 d-flex gap-2">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCrearProducto">‚ûï Crear
          Producto</button>
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalImportarExcel">üì• Importar desde
          Excel</button>
      </div>

      <!-- Modal Importar Excel -->
      <div class="modal fade" id="modalImportarExcel" tabindex="-1" aria-labelledby="modalImportarExcelLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <form method="POST" action="/admin/productos/importar" enctype="multipart/form-data" class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalImportarExcelLabel">üì• Importar Productos desde Excel</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="archivoExcel" class="form-label">Selecciona un archivo Excel (.xlsx o .xls)</label>
                <input type="file" name="archivo" accept=".xlsx,.xls" class="form-control" required>
              </div>
              <div class="alert alert-info">
                El archivo debe tener las columnas: <strong>nombre</strong>, <strong>descripcion</strong>,
                <strong>precio</strong> y <strong>categoria</strong> (nombre de la categor√≠a).
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button class="btn btn-primary" type="submit">Importar</button>
            </div>
          </form>
        </div>
      </div>
      <!-- Modal Crear Producto -->
      <div class="modal fade" id="modalCrearProducto" tabindex="-1" aria-labelledby="modalCrearProductoLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <form method="POST" action="/admin/productos/crear" class="modal-content" enctype="multipart/form-data">
            <div class="modal-header">
              <h5 class="modal-title" id="modalCrearProductoLabel">‚ûï Crear Producto</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" name="nombre" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Descripci√≥n</label>
                <textarea name="descripcion" class="form-control" rows="3" required></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">Imagen</label>
                <input type="file" name="foto" class="form-control" accept="image/*" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Precio</label>
                <input type="number" name="precio" step="0.01" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Categor√≠a</label>
                <select name="categoria" class="form-select" required>
                  <% categorias.forEach(cat=> { %>
                    <option value="<%= cat._id %>">
                      <%= cat.nombre %>
                    </option>
                    <% }) %>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary">Crear</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Tabla de productos -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Descripci√≥n</th>
              <th>Imagen</th>
              <th>Precio</th>
              <th>Categor√≠a</th>
              <th>Promoci√≥n</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% if (productos && productos.length> 0) { %>
              <% productos.forEach(p=> { %>
                <tr>
                  <!-- ID -->
                  <td>
                    <%= p._id %>
                  </td>

                  <!-- Nombre -->
                  <td>
                    <%= p.nombre %>
                  </td>

                  <!-- Descripci√≥n -->
                  <td>
                    <%= p.descripcion %>
                  </td>

                  <!-- Imagen (con predeterminada si falta) -->
                  <td>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#imagenModal"
                      data-img="/uploads/<%= p.foto && p.foto.trim() !== '' ? p.foto : 'productos/no-image.png' %>">
                      <img src="/uploads/<%= p.foto && p.foto.trim() !== '' ? p.foto : 'productos/no-image.png' %>"
                        alt="Imagen"
                        style="width: 60px; height: 60px; object-fit: cover; cursor: pointer; border-radius: 5px;">
                    </a>
                  </td>

                  <!-- Precio -->
                  <td>$<%= p.precio.toFixed(2) %>
                  </td>

                  <!-- Categor√≠a -->
                  <td>
                    <%= p.categoria?.nombre || 'Sin categor√≠a' %>
                  </td>

                  <!-- ¬øTiene promoci√≥n? -->
                  <td>
                    <% if (p.promocionActiva) { %>
                      <span class="badge bg-success">
                        <%= p.promocionActiva.titulo %> - <%= p.promocionActiva.valor %>
                      </span>
                      <% } else { %>
                        <span class="badge bg-secondary">No</span>
                        <% } %>
                  </td>

                  <!-- Acciones -->
                  <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#modalEditarProducto"
                      data-id="<%= p._id %>" data-nombre="<%= p.nombre %>" data-descripcion="<%= p.descripcion %>"
                      data-precio="<%= p.precio %>" data-categoria="<%= p.categoria?._id %>">
                      ‚úèÔ∏è Editar
                    </button>
                    <form method="POST" action="/admin/productos/eliminar/<%= p._id %>" class="d-inline"
                      onsubmit="return confirm('¬øEliminar este producto?');">
                      <button class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</button>
                    </form>
                  </td>
                </tr>
                <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="8" class="text-center text-danger">‚ö†Ô∏è No hay productos.</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Modal Editar Producto -->
    <div class="modal fade" id="modalEditarProducto" tabindex="-1" aria-labelledby="modalEditarProductoLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <form method="POST" id="formEditarProducto" class="modal-content" enctype="multipart/form-data">
          <div class="modal-header">
            <h5 class="modal-title" id="modalEditarProductoLabel">‚úèÔ∏è Editar Producto</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="id" id="editar-id">
            <div class="mb-3">
              <label class="form-label">Nombre</label>
              <input type="text" name="nombre" id="editar-nombre" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Descripci√≥n</label>
              <textarea name="descripcion" id="editar-descripcion" class="form-control" rows="3" required></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Nueva imagen (opcional)</label>
              <input type="file" name="foto" class="form-control" accept="image/*">
            </div>
            <div class="mb-3">
              <label class="form-label">Precio</label>
              <input type="number" step="0.01" name="precio" id="editar-precio" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Categor√≠a</label>
              <select name="categoria" id="editar-categoria" class="form-select" required>
                <% categorias.forEach(cat=> { %>
                  <option value="<%= cat._id %>">
                    <%= cat.nombre %>
                  </option>
                  <% }) %>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
          </div>
        </form>
      </div>
    </div>
    <!-- Modal para mostrar imagen en grande -->
    <div class="modal fade" id="imagenModal" tabindex="-1" aria-labelledby="imagenModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-transparent border-0">
          <div class="modal-body text-center">
            <img id="modal-img" src="" class="img-fluid rounded" style="max-height: 80vh;" alt="Vista previa">
          </div>
        </div>
      </div>
    </div>

    <script>
      const modalEditar = document.getElementById('modalEditarProducto');
      modalEditar.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const nombre = button.getAttribute('data-nombre');
        const descripcion = button.getAttribute('data-descripcion');
        const precio = button.getAttribute('data-precio');
        const categoria = button.getAttribute('data-categoria');

        document.getElementById('editar-id').value = id;
        document.getElementById('editar-nombre').value = nombre;
        document.getElementById('editar-descripcion').value = descripcion;
        document.getElementById('editar-precio').value = precio;
        document.getElementById('editar-categoria').value = categoria;

        document.getElementById('formEditarProducto').action = `/admin/productos/editar/${id}`;
      });
    </script>
    <script>
      const imagenModal = document.getElementById('imagenModal');
      imagenModal.addEventListener('show.bs.modal', function (event) {
        const link = event.relatedTarget;
        const src = link.getAttribute('data-img');
        document.getElementById('modal-img').src = src;
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>